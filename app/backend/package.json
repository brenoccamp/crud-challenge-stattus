{
  "name": "backend-crud-device-tags",
  "version": "1.0.0",
  "description": "Developed by brenoccamp (https://github.com/brenoccamp) for a technical challenge.",
  "main": "./build/server",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "build": "npx tsc",
    "test": "mocha -r ts-node/register ./src/tests/*/*$NAME*.{test,spec}.ts -t 10000 --exit",
    "test:mocha": "nyc --all --include services --include controllers mocha src/tests/unit_tests/**/*.ts --exit",
    "dev": "ts-node ./src/server.ts",
    "db:reset": "npx sequelize-cli db:drop && npx sequelize-cli db:create && npx sequelize-cli db:migrate && npx sequelize-cli db:seed:all",
    "prestart": "npm run build && npm run db:reset",
    "test:unit": "mocha -r ts-node/register ./src/tests/unit_tests/**/*$NAME*.{test,spec}.ts -t 10000 --exit",
    "start": "node ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^4.3.1",
    "@types/chai-http": "^4.2.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.38",
    "@types/sequelize": "^4.28.13",
    "@types/sinon": "^10.0.11",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "eslint": "^8.16.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-mocha": "^10.0.5",
    "eslint-plugin-sonarjs": "^0.13.0",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.16",
    "nyc": "^15.1.0",
    "sequelize-cli": "^6.4.1",
    "sinon": "^14.0.0",
    "ts-node": "^10.8.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.2"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "jest": "^28.1.0",
    "jsonwebtoken": "^8.5.1",
    "mysql2": "^2.3.3",
    "sequelize": "^6.20.1"
  }
}
